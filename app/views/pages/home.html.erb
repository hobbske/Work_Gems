

<div class="jumbotron text-center">
  <h1> Welcome to </br> Work<i class="fa fa-diamond"></i>Gems </h1>
  <h3> The easiest way to showcase the gems of your work! </h3>
</div>

<div class="row">
  <% if user_signed_in? %>

  <div class="col-md-6">
      <div class="well">
        <h2 class="text-center"> Your Profile </h2>
        <p class="text-center"> Keep your profile information current to stay better connected to the community. </p>
        <% if current_user.profile %>
          <%= link_to user_path(current_user), class: 'btn btn-danger btn-lg btn-block' do %>
          <i class="fa fa-search"></i> View Your Profile
          <% end %>

        <%= link_to edit_user_profile_path(current_user), class: 'btn btn-danger btn-lg btn-block' do %>
            <i class="fa fa-pencil"></i> Edit Your Profile
          <% end %>

        <% else %>
          <p class="text-center"> Create your profile so you can share your information and contribute to the community. </p>
          <%= link_to new_user_profile_path(current_user), class: 'btn btn-danger btn-lg btn-block' do %>
            <i class="fa fa-user"></i> Create Your Profile
          <% end %>
        <% end %>

      </div>
  </div>

  <div class="col-md-6">
    <div class="well">
      <h2 class="text-center"> The Community </h2>
      <p class="text-center"> Visit our community to meet other professional and share resources. </p>
      <%= link_to user_path(current_user), class: 'btn btn-danger btn-lg btn-block' do %>
        <i class="fa fa-users"></i>  Visit the Community
      <% end %>
    </div>
  </div

  <% else %>

    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Basic Membership</h2>
        <h4 class="text-center">Enter Description Here</h4>
        <%= link_to "Sign up for free", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-warning btn-lg btn-block' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Pro Membership</h2>
        <h4 class="text-center">Enter Description Here</h4>
        <%= link_to "Sign up for $10/month", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-warning btn-lg btn-block' %>
      </div>
    </div>

  <% end %>

</div>