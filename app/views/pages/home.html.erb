

<div class="jumbotron text-center brand-unit">
  <h1> Welcome to </br> Work<i class="fa fa-diamond"></i>Gems </h1>
  <h3 class="padding"> The easiest way to showcase the gems of your work! </h3>
</div>

<div class="row">
  <% if user_signed_in? %>

  <div class="col-md-6">
      <div class="brand-unit-main">
        <h2 class="text-center"> Profile </h2>
        <% if current_user.profile %>
        <p class="text-center"> Keep your profile information current to stay better connected to the community. </p>
        <%= link_to user_path(current_user), class: 'btn brand-btn btn-lg btn-block' do %>
          <i class="fa fa-eye"></i> View
          <% end %>


        <% else %>
          <p class="text-center"> Create a profile to join and contribute to the community. </p>
        <%= link_to new_user_profile_path(current_user), class: 'btn brand-btn btn-lg btn-block' do %>
            <i class="fa fa-user"></i> Create Your Profile
          <% end %>
        <% end %>

      </div>
  </div>

  <div class="col-md-6">
    <div class="brand-unit-main">
      <h2 class="text-center"> Community </h2>
      <p class="text-center"> Visit our community to meet other professionals and share resources. </p>
      <%= link_to users_path, class: 'btn brand-btn btn-lg btn-block' do %>
        <i class="fa fa-users"></i>  Visit
      <% end %>
    </div>
  </div

  <% else %>

    <div class="col-md-6">
      <div class="brand-unit-main">
        <h3 class="text-center"><strong>Introductory Membership</strong></h3>
        <h5>  60 days <strong>FREE</strong></h5>
        <ul class="text-left">
          <li> <strong>$10</strong> per month </li>
          <li> Access to WorkGems community </li>
          <li> Create up to <strong>5</strong> categories </li>
          <li> Showcase up to <strong>10</strong> gems per category </li>
        </ul>

        <%= link_to "Sign up for free today", new_user_registration_path(plan: @basic_plan.id), class: 'btn brand-btn btn-lg btn-block' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="brand-unit-main">
        <h3 class="text-center"><strong>Pro Membership</strong></h3>
        <h5> _____________________ </h5>
        <ul class="text-left">
          <li> <strong>$20</strong> per month </li>
          <li> Access to WorkGems community </li>
          <li> Create up to <strong>20</strong> categories </li>
          <li> Showcase up to <strong>10</strong> gems per category </li>
        </ul>
        <%= link_to "Sign up for $20/month", new_user_registration_path(plan: @pro_plan.id), class: 'btn brand-btn btn-lg btn-block' %>
      </div>
    </div>

  <% end %>

</div>