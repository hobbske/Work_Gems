<div class="row"
  <div class="col-md-6 col-md-offset-3">

    <h1 class="text-center">Create Your Profile</h1>
    <p class="text-center">Become part of the WorkGems community and fille out your profile!</p>

    <div class="well">
      <%= form_for @profile, url: user_profile_path do |f| %>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :company_name %>
          <%= f.text_field :company_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "Profession" %>
          <%= f.select(:profession, options_for_select([['Construction', 'Construction'], ['Painter', 'Painter'], ['Photographer', 'Photographer']]), { include_blank: true, placeholder: "Select One" }, class: 'form-control') %>
        </div>
        <div class="form-group">
          <%= f.label "Specialty" %>
          <%= f.select(:specialty, options_for_select([['Individual', 'Individual'], ['Commercial', 'Commercial']]), { include_blank: true }, class: 'form-control') %>
        </div>
        <div class="form-group">
          <%= f.label :work_number %>
          <%= f.text_field :work_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :mobile_number %>
          <%= f.text_field :mobile_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :linkedin_url %>
          <%= f.text_field :linkedin_url, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :facebook_url %>
          <%= f.text_field :facebook_url, class: 'form-control' %>
        </div>

      <%= f.submit "Submit Profile", class: 'btn btn-success'%>

      <% end %>

    </div>

  </div>
</div>