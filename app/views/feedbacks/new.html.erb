<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="brand-unit-main">

      <h1 class="text-center">Give Feedback <i class="fa fa-commenting"></i></h1>
      <p class="text-center">Let us know how we can make it even easier for you to showcase the gems of your work.</p>

      <%= form_for @feedback do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :comments %>
        <%= f.text_area :comments, class: 'form-control' %>
      </div>

      <%= f.submit 'Submit', class: 'btn brand-btn' %>

      <% end %>
    </div>
  </div>
</div>