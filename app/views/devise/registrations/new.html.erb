<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center brand-unit">
    <% if params[:plan] == '2' %>
      <h2>Pro Account</h2>
      <p>Placeholder</p>
    <% else %>
      <h2>Basic Account</h2>
      <p>Placeholder</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="brand-unit-main">

      <h2>Sign up</h2>

      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>
