<div class="row">
  
  <div class="col-md-6 col-md-offset-3 text-center brand-unit">
    <% if params[:plan] == '2' %>
      <h3 class="text-center"><strong>Pro Membership</strong></h3>
      <h5> _____________________ </h5>
      <ul class="text-left">
        <li> <strong>$20</strong> per month </li>
        <li> Access to WorkGems community </li>
        <li> Create up to <strong>20</strong> categories </li>
        <li> Showcase up to <strong>10</strong> gems per category </li>
      </ul>
    <% else %>
      <h3 class="text-center"><strong>Introductory Membership</strong></h3>
      <h5>  60 days <strong>FREE</strong></h5>
      <ul class="text-left">
        <li> <strong>$10</strong> per month </li>
        <li> Access to WorkGems community </li>
        <li> Create up to <strong>5</strong> categories </li>
        <li> Showcase up to <strong>10</strong> gems per category </li>
      </ul>
    <% end %>
  </div>
  
  <div class="col-md-6 col-md-offset-3">
    <div class="brand-unit-main">

      <h2>Sign up</h2>

      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
      
    </div>
  </div>

</div>
