<div class="container-fluid">
  <div class="row">

    <div class="col-md-12 text-center">
      <div class="row brand-unit-main text-center">


        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-12 brand-unit-main brand-carousel well">

              <div class="col-xs-6 text-center">
                <h4>Before</h4>
              </div>
              <div class="col-xs-6 text-center">
                <h4>After</h4>
              </div>
               
              <div id="owl-slider2" class="owl-carousel carousel-slider">
                
                <div>
                  <%= image_tag @sample.img_before.url(:carousel), class: "img-responsive carousel-img" %> 
                  <%= image_tag @sample.img_after.url(:carousel), class: "img-responsive carousel-img" %>   
                  <div>
                    <h3><%= @sample.category %></h3>
                    <h4><%= @sample.title %></h4>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>


        <div class="col-xs-4">
          <div class="text-center">
            <%= link_to user_samples_path do %>
              <h4><i class="fa fa-hand-o-left"></i> Back</h4>
            <% end %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="text-center">
            <%= link_to edit_user_sample_path() do %>
              <h4><i class="fa fa-pencil"></i> Edit</h4>
            <% end %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="text-center">
            <%= link_to user_samples_path do %>
              <h4 id="link_modal"><i class="fa fa-paper-plane"></i> Send</h4>
            <% end %>
          </div>
        </div>

      </div>


      <!-- URL Link Share Modal Begin -->

      <div class="modal fade brand-main" data-backdrop="false">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Share Link</h4>
            </div>
            <div class="modal-body">
              <p>Buttons Go Here</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->

      <!-- Carousel Modal End -->







    </div>
  </div>


</div>