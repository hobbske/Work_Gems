<%= form_for @sample, :url user_samples_path => { :action => :create, :id => @user_id }  do |f| %>
  <div class="form-group text-left">
    <%= f.label :category %>
    <%= f.text_field :category, class: 'form-control' %>
  </div>
  <div class="form-group text-left">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group text-left">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group text-left">
    <%= f.label "Before Image" %>
    <%= f.file_field :img_before %>
  </div>

  <div class="form-group text-left">
    <%= f.label "After Image" %>
    <%= f.file_field :img_after %>
  </div>

  <div class="form-group text-left">
    <%= check_box_tag(:marquee) %>
    <%= label_tag(:marquee, "This is a marquee gem!") %>
  </div>
  
<%= f.submit "Save", class: 'btn brand-btn'%>

<% end %>