
<%= form_for @sample, url: user_samples_path, :html => { :multipart => true } do |f| %>
  <div class="form-group text-left">
    <%= f.label :category %>
    <%= f.text_field :category, class: 'form-control' %>
  </div>
  <div class="form-group text-left">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group text-left">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group text-left">
    <%= f.label "Before Image" %>
    <%= f.file_field :img_before %>
  </div>

  <div class="form-group text-left">
    <%= f.label "After Image" %>
    <%= f.file_field :img_after %>
  </div>

  <h4><div class="form-group text-left">
    <%= check_box_tag(:marquee) %>
    <%= label_tag(:marquee, " Select as Marquee Gem!") %>
  </div></h4>

<%= link_to :back , class: 'btn brand-btn' do %>
  <i class="fa fa-hand-o-left"></i> 
  Back
<% end %>
  
<%= f.submit "Save", class: 'btn brand-btn'%>

<% end %>