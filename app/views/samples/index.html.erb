<div class="container-fluid">
  <div class="row">
      <div class="brand-unit">
        <h2><i class="fa fa-film"></i> <%= @user.profile.company_name %> Slideshow</h2>
      </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 brand-unit-main brand-carousel well">

      <div class="col-xs-6 text-center">
        <h4>Before</h4>
      </div>
      <div class="col-xs-6 text-center">
        <h4>After</h4>
      </div>
       
      <div id="owl-slider" class="owl-carousel carousel-slider">
      <% @samples.each do |sample| %>
        
        <div class="carousel-slider" id="mymodal">
          <%= image_tag sample.img_before.url(:carousel), class: "img-responsive carousel-img" %> 
          <%= image_tag sample.img_after.url(:carousel), class: "img-responsive carousel-img" %>   
          <div>
            <h3><%= sample.category %></h3>
            <h4><%= sample.title %></h4>
          </div>
        </div>

      <% end %>
      </div>

      
      <!-- Carousel Modal Begin -->

        <div class="modal fade brand-main" data-backdrop="false">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Send @sample.title link?</h4>
              </div>
              <!-- Modal Body -->
              <div class="modal-body">
                <div class="row">
                  <div class="col-xs-4">
                    <div class="text-center">
                      <%= link_to user_samples_path do %>
                        <h4 class="brand-text-red"><i class="fa fa-hand-o-left"></i> Back</h4>
                      <% end %>
                    </div>
                  </div>
                  <div class="col-xs-4">
                    <div class="text-center">
                      <%= link_to user_samples_path do %>
                        <h4 class="brand-text-red"><i class="fa fa-pencil"></i> Edit</h4>
                      <% end %>
                    </div>
                  </div>
                  <div class="col-xs-4">
                    <div class="text-center">
                      <%= link_to user_samples_path do %>
                        <h4 class="brand-text-red" id="link_modal"><i class="fa fa-paper-plane"></i> Send</h4>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Modal Footer -->
              <div class="modal-footer">
                <button type="button" class="btn brand-btn" data-dismiss="modal">Close</button>

              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <!-- Carousel Modal End -->  


    </div>
  </div>
</div>

<!-- GALLERY -->
<div class="container-fluid">
  <div class="row">
      <div class="brand-unit">
        <h2><i class="fa fa-th"> </i> Gallery</h2>
      </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">

    <% @samples.each do |sample| %>

    <div class="col-lg-3 gallery-space">
      
      

      <div class="row brand-unit-main brand well ">
           
          <div>   
            <p> <strong><%= sample.title %></strong> </p>
            <p><%= sample.description %></p>
            <div>
              <%= image_tag sample.img_before.url(:medium), class: "img-responsive carousel-img" %>
              <%= image_tag sample.img_after.url(:medium), class: "img-responsive carousel-img" %>
            </div>     
          </div>


          <div class="col-xs-6 text-center">    
            <p>Before</p>

            <%= link_to user_sample_path(current_user, sample) do %>
              <p><i class="fa fa-eye"></i> View</p>
            <% end %>
          </div>

          <div class="col-xs-6 text-center">    
            <p>After</p>

            <%= link_to user_sample_path(current_user, sample), method: :delete do %>
              <p><i class="fa fa-trash"></i> Delete</p>
            <% end %>
          </div>

        </div>  

      </div>
      <% end %>

    </div>
  
</div>



