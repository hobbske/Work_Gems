<div class="container-fluid">
  <div class="row">
      <div class="brand-unit">
        <h2><i class="fa fa-film"></i> <%= @user.profile.company_name %> Slideshow</h2>
      </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 brand-unit-main">
    <div class="col-md-6 text-center">
      <h4>Before</h4>
    </div>
    <div class="col-md-6 text-center">
      <h4>After</h4>
    </div>
       
      <div id="owl-slider" class="owl-carousel">
      <% @samples.each do |sample| %>
        
        <div>
          <%= image_tag sample.img_before.url(:carousel), class: "img-responsive carousel-img" %> <%= image_tag sample.img_after.url(:carousel), class: "img-responsive carousel-img" %>   
          <div>
            <h3><%= sample.category %></h3>
            <h4><%= sample.title %></h4>
          </div>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
      <div class="brand-unit">
        <h2><i class="fa fa-th"></i> <%= @user.profile.company_name %> Gallery</h2>
      </div>
  </div>
</div>

<!-- GALLERY -->
<div class="container-fluid">
  <div class="row">
    <% @samples.each do |sample| %>

    <div class="col-md-3 text-center">
      <div class="row brand-unit-main text-center">

        <h4> <strong><%= sample.title %></strong> </h4>
        <p><%= sample.description %></p>
        <div class="col-md-6">
          <div class="row text-center">
            <%= image_tag sample.img_before.url(:medium) %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row text-center">
            <p><%= image_tag sample.img_after.url(:medium) %></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row text-center">
            <p>Before</p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row text-center">
            <p>After</p>
          </div>
        </div>

          <div class="col-md-6">
           <div class="row text-center">         
              <%= link_to user_sample_path(current_user, sample) do %>
                <h5><i class="fa fa-eye"></i> View</h5>
              <% end %>
            </div>
          </div>
          <div class="col-md-6">
           <div class="row text-center">
              <%= link_to user_sample_path(current_user, sample), method: :delete do %>
                <h5><i class="fa fa-trash"></i> Delete</h5>
              <% end %>
            </div>
          </div>
        </div>

      </div>
      <% end %>
    </div>   
  </div>

