<div class="row">
  <div class="col-xs-12">
    <div class="brand-unit">

      <h2><i class="fa fa-users"></i> Meet The Community </h2>
      <p>Share resources and best practices.</p>

    </div>
  </div>

  <div class="col-xs-12">
    <div class="brand-unit-main">

      <table class="table table-striped table-bordered table-hover brand-unit-table">
        <thead>
          <tr>
            <th></th>
            <th class="text-center">Name</th>
            <th class="text-center">Profession</th>
            <th class="text-center">Company</th>
            <th class="text-center">Email</th>
            <th class="text-center">Mobile</th>
            <th class="text-center">LinkedIn</th>
            <th class="text-center">Facebook</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <% if user.profile %>
            <tbody>
              <tr class="brand">
                <th class="index-table-text img-responsive"><%= image_tag user.profile.avatar.url(:thumb) %></th>
                <th class="index-table-text"><%= user.profile.first_name %> <%= user.profile.last_name %></th>
                <th class="index-table-text"><%= user.profile.profession %></th>
                <th class="index-table-text"><%= user.profile.company_name %></th>
                <th class="index-table-icon">
                  <% if user.profile.contact_email %>
                    <%= link_to user.profile.contact_email do %>
                      <i class="fa fa-envelope"></i>
                    <% end %>
                  <% else %>
                  <% end %>
                </th>
                <th class="index-table-icon">
                  <% if user.profile.mobile_number %>
                    <%= link_to user.profile.mobile_number do %>
                      <i class="fa fa-mobile"></i>
                    <% end %>
                  <% end %>
                </th>
                <th class="index-table-icon">
                  <% if user.profile.linkedin_url %>
                  <%= link_to user.profile.linkedin_url do %>
                      <i class="fa fa-linkedin-square fb"></i>
                    <% end %>
                  <% end %>
                </th>
                <th class="index-table-icon">
                  <% if user.profile.facebook_url %>
                    <%= link_to user.profile.facebook_url do %>
                      <i class="fa fa-facebook-square"></i>
                    <% end %>
                  <% end %>
                </th>
              </tr>
            </tbody>
          <% end %>

          <!-- Carousel Modal Begin -->

          <div class="modal fade brand-main" data-backdrop="false">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                  <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                </div>
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div><!-- /.modal -->

          <!-- Carousel Modal End -->

        <% end %>
      </table>

    </div>
  </div>
</div>