<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="brand-unit-main img-responsive">

      <div class="row brand-unit">

        <div>
          <h4><%= profession_icon %> <%= @user.profile.company_name %></h4>
        </div>
        
        <br>

        <div class="col-md-4 brand-unit-main">
          <p class="img-responsive img-center"><%= image_tag @user.profile.avatar.url(:medium) %></p>
        </div>

        <div class="col-md-8">
          <div class="row border-white">
            <h5 align="center"> <%= @user.profile.description %> </h5>
          </div>
        </div>
        
      </div>         

      <hr>

      <div>

        <h3 class="modal-title text-center"><%= @user.profile.first_name %> <%= @user.profile.last_name %></h3>

        <% if current_user.plan_id == 1 || current_user.plan_id == 2 %>
      
          <h5><i class="fa fa-building-o"> </i><strong> Work: </strong><a href="tel:<%= @user.profile.work_number %>" title="Call <%= @user.profile.first_name %> Work"><%= @user.profile.work_number %></a></h5>
          <h5><i class="fa fa-mobile"> </i><strong> Mobile: </strong><a href="tel:<%= @user.profile.mobile_number %>" title="Call <%= @user.profile.first_name %> Mobile"><%= @user.profile.mobile_number %></a></h5>

          <h5> <strong>Email: </strong><a href="mailto:<%= @user.profile.contact_email %>" title="Email <%= @user.profile.first_name %>"><%= @user.profile.contact_email %></a></h5>
          
          <h1>
            <%= link_to @user.profile.facebook_url do %>
              <i class="fa fa-facebook-square"></i> <% @user.profile.facebook_url %>
            <% end %>

            <%= link_to @user.profile.linkedin_url do %>
              <i class="fa fa-linkedin-square"></i> <% @user.profile.linkedin_url %>
            <% end %>
          </h1>
        <% end %>

      </div>

      <hr>
      
      <div>

        <h3>
          <div align="center" class="float-left">
            <%= link_to @user.profile.linkedin_url, class: "btn btn-lg brand-btn" do %>
              <i class="fa fa-paper-plane"> Send</i>
            <% end %>
          </div>
          <div align="center" class="float-left">
            <%= link_to edit_user_profile_path(current_user), class: "btn btn-lg brand-btn" do %>
              <i class="fa fa-pencil"> Edit</i>
            <% end %>
          </div>
          <div align="center" class="float-left">
            <%= link_to root_path, class: "btn btn-lg brand-btn" do %>
              <i class="fa fa-remove"> Cancel</i> 
            <% end %>
          </div>
        </h3>

      </div>

      <br>
      <br>          

    </div>
  </div>
</div>















